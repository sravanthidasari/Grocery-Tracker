<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <h1 class="title-header"><%= groceries.groceryItem %></h1>
      <%- include ('../partials/nav-start.ejs') %>
        <li class="nav-item">
          <a class="nav-link" href="/groceries/<%= groceries.groceryItem %>">Back to item</a>
        </li>
      <%- include ('../partials/nav-end.ejs') %>
      <form action="/groceries/<%= groceries.groceryItem %>?_method=PUT" method="POST">
        <table class="table table-striped table-bordered">
          <tr>
            <th>Restock Quantity</th>
            <td>
              <div class="restockQuantity">
                <input type="number" min="1" name="restockQuantity" value="<%= groceries.restockQuantity %>" />
              </div>
            </td>
          </tr>
          <tr>
            <th>Consume Quantity</th>
            <td>
              <div class="consumeQuantity">
                <input type="number" min="1" name="consumeQuantity" value="<%= groceries.consumeQuantity %>" />
              </div>
            </td>
          </tr>
          <tr>
            <th>Total Quantity</th>
            <td>
              <div class="totalQuantity">
                <input type="number" name="totalQuantity" value="<%= groceries.totalQuantity %>" />
              </div>
            </td>
          </tr>
        </table>

        <div class="footer-links">
          <input class="btn btn-primary footer-link" type="submit" id="submit" value="Update Grocery Item" />
          <input class="btn btn-warning footer-link" type="reset" id="reset" value="Undo changes" />
        </div>
      </form>
    </div>
  </body>
</html>
